<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Chronometer
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/notificationTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/notificationTimer"
        android:layout_toLeftOf="@id/notificationTimer"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Remote Title"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationTitle"
        android:layout_alignStart="@+id/notificationTitle"
        android:layout_alignLeft="@+id/notificationTitle"
        android:layout_alignEnd="@+id/notificationTitle"
        android:layout_alignRight="@+id/notificationTitle"
        android:layout_toLeftOf="@id/notificationTimer"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:singleLine="true"
        android:text="Remote message"
        android:textSize="14dp"/>

</RelativeLayout>
