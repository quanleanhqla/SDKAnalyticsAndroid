<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <include
        android:id="@+id/push_collapsed"
        layout="@layout/push_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/rate_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/push_collapsed"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/rate_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rate_frame"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/rate_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/star_unselected"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/rate_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/star_unselected"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/rate_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/star_unselected"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/rate_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/star_unselected"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/rate_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/star_unselected"
            android:scaleType="fitCenter" />

    </LinearLayout>

</RelativeLayout>